<?xml version="1.0" encoding="UTF-8"?>
<project default="plugin_export" name="build">
	<loadproperties srcfile="META-INF/MANIFEST.MF"></loadproperties>
	<property environment="env"/>
	<property name="android.home" value="${env.ANDROID_SDK}"/>
	<target name="plugin_export">
		<pde.exportPlugins
			destination="release"
			exportSource="false" exportType="directory" plugins="GenDbHandler"
			useJARFormat="true"
			/>
	</target>
    <target name="core_export">
        <delete dir="build"/>
    	<mkdir dir="build"/>
    	<echo message="${android.home}/platforms/android-10/android.jar"></echo>
    	<javac srcdir="src-core;src-common" destdir="build" includeantruntime="no" source="1.6" target="1.6">
    		<classpath path="${android.home}/platforms/android-10/android.jar"></classpath>
    	</javac>
    	<jar destfile="release/plugins/GenDbHandler-core_${Bundle-Version}.jar" basedir="build">
    	</jar>
    </target>
</project>
