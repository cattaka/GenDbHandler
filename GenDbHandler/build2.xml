<?xml version="1.0" encoding="UTF-8"?>
<project default="plugin_export" name="build">
	<property environment="env"/>
	<property name="android.home" value="${env.ANDROID_SDK}"/>
	<target name="plugin_export">
		<pde.exportPlugins
			destination="release"
			exportSource="false" exportType="directory" plugins="GenDbHandler"
			useJARFormat="true"
			/>
	</target>
    <target name="core_export">
        <delete dir="build"/>
    	<mkdir dir="build"/>
    	<echo message="${android.home}/platforms/android-10/android.jar"></echo>
    	<javac srcdir="src-core;src-common" destdir="build" includeantruntime="no" source="1.5" target="1.5">
    		<classpath path="${android.home}/platforms/android-10/android.jar"></classpath>
    	</javac>
    	<jar destfile="release/GenDbHandler-core.jar" basedir="build">
    	</jar>
    </target>
</project>
